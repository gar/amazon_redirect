{
  "name": "Amazon Redirect",
  "manifest_version": 2,
  "version": "0.1",
  "description": "View an Amazon.com book page on Amazon.co.uk",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*.amazon.com/*"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
      "default_icon": "uk_flag_16_16.png"
  },
  "permissions": ["tabs"]
}
